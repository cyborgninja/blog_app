%h1 Title: #{@blog.title}
= link_to "Edit", edit_blog_path(@blog.id)
|
= link_to "Back", :back
%h2 Listing entries
%table
  %tr
    %th Title
    %th Body
  - @blog.entries.each do |entry|
    %tr
      %td= entry.title
      %td= entry.body
      %td= link_to "Show", blog_entry_path(@blog.id, entry.id)
      %td= link_to "Edit", edit_blog_entry_path(@blog.id, entry.id)
      %td= link_to "Destroy", blog_entry_path(@blog.id, entry.id), method: :delete
= link_to "New Entry", new_blog_entry_path(@blog.id)